<section class="hero-main">
    <div class="container">
      <h1 class="title has-text-centered">
        新規作成
      </h1>
    </div>
</section>

<% if @shop.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @shop.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @shop do |f| %>
          <div class="field">
            <%= f.label :title, "店名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :shop_address, "場所", class: "label" %>
            <%= f.text_area :shop_address, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "詳細", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>
          
          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-main" %>
        <% end %>
      </div>
    </div>
  </div>
</section>