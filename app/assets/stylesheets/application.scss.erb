@import "bulma";

.notification:not(:last-child){
	margin-bottom: 0;
}

.profile_image {
 border-radius: 50%;
}

.hero.is-fullheight {
 margin: 0;
 padding: 0;
  background-image: url("<%= asset_path('IMG_5969.jpg') %>");
  background-repeat: none;
}

.hero {
  margin: 5% 10%;
}

.hero-main {
  border: 1px solid #323232;
  border-right-style: none;
  border-left-style: none;
  padding: 15px;
  margin-top: 20px;
}

.card-content.p-1 {
 border-bottom: 1px solid #323232;
 margin: 30px;
 text-align: center;
}

.field.down-icon-field {
 text-align: center;
 margin-bottom: 15px;
}

.down-icon {
 color: #82ABA7;
 opacity: .5;
 font-size: 60px;
}

.text.is-fullwidth {
 color: #323232;
 font-size: 25px;
}

.container-user {
 height: 65px;
 overflow:hidden;
}
.container-user:nth-child(odd) {
 background-color: #E4E4E4;
}

.button.is-main{
 background-color: #82ABA7;
 color: #fff;
}

.button.is-main:hover{
  opacity: .8;
  transition: .5s ;
}

td.is-size-5.has-text-left {
 color: #323232;
}

.card.py-6 {
 width: 300px;
 margin: 0 auto;
}